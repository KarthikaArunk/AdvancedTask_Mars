{
	"info": {
		"_postman_id": "2b6ebb3d-dbc3-4cb9-abce-b8a9fa8749b7",
		"name": "Validate_Json_API_Testing",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Validate Json request",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Check response\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"\r",
							"    pm.expect(jsonData.size).to.eql(1);\r",
							"\r",
							"    pm.expect(jsonData.object_or_array).to.eql(\"array\");\r",
							"\r",
							"    pm.expect(jsonData.validate).to.eql(true);\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseURLValidate}}/?json=%5BJSON-code-to-validate%5D",
					"host": [
						"{{baseURLValidate}}"
					],
					"path": [
						""
					],
					"query": [
						{
							"key": "json",
							"value": "%5BJSON-code-to-validate%5D"
						}
					]
				}
			},
			"response": []
		}
	]
}